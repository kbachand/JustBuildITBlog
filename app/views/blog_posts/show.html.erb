<p id="notice"><%= notice %></p>
<br>
<br>
<div class="panel panel-primary">
  <div class="panel-heading">
    <%= @blog_post.title %>
  </div>
  <div class="panel-body">
    <p>by <%= @blog_post.user.username %>
    <%= image_tag current_user.avatar, :size => "20x20" %></p>
    <p><%= @blog_post.blog_entry %></p>
    <p><%= time_ago_in_words(@blog_post.created_at) %> ago</p>

  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    Comments
  </div>
  <div class="panel-body">
    <%= render @comment %>
  </div>
</div>

<div class="panel panel-success">
  <div class="panel-heading">
    Make a Comment
  </div>
  <div class="panel-body">
    <%= render 'comments/form' %> 
  </div>
</div>

<div>
  <%= link_to 'Edit', edit_blog_post_path(@blog_post), class: "btn btn-primary" %> |
  <%= link_to 'Back', blog_posts_path, class: "btn btn-primary" %>
</div>
<br>
<br>
<footer>
  <center><p>&copy 2016 JustBuiltIT Blog</p></center>
</footer>